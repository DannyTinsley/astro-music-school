<h1>Our Courses</h1>
<br>


<p> Add a Course</p>



    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header text-center">
            <li style="float: right" class="modal-title w-100 font-weight-bold">Create New Course</li>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <img src="plus.png" width="5%" alt="Add A Course">
              <span aria-hidden="true">&times;</span>
            </button>
          
            
            <%= form_for Course.new do |f| %> 
                <%= f.text_field :image, :label => 'Choose an Image URL' %>
                <%= f.text_field :name, :label => 'Course Name' %>
                <%= f.text_field :session, :label => 'Session' %>
                <%= f.text_field :teacher, :label => 'Teacher'%>
                <%= f.text_field :description, :label => 'Course Description'%>
                <%= f.button :submit %>
              <% end %>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button class="btn btn-deep-orange">Create New Course</button>
          </div>
        </div>
      </div>
    </div>
    
    <div>
      <img src="plus.png" width="5%" data-toggle="modal" data-target="#myModal" alt="Add A Course">
    </div>










    <div class="card-group">
    <div class="card-columns">
       
    <div class="card-block">
        <% $courses.each do |course| %>
          <div class="card">
         <strong class="card-text">
         <%= course.name %>
          <br>
          <%= course.session %>
          <br>
         <img src="<%= course.image %>" width="100%" alt="Course Image">
          <br>
          <h3 class="card-text">Taught By : <%= course.teacher %></h3>
          
          <h4 class="card-text">"<%= course.description %>"</h4>
          </strong>
          
          <a href="#" method="POST" class="btn btn-primary">Edit Course</a>
          <br>
          <br>
           <a href="#" id="deleteCourse" class="btn btn-primary">Delete Course</a>
           <br>
           <br>
           </div>
           
       <% end %>
       
       </div>
       </div>